<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="io.ohalloran.urdining.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/logo"
        android:src="@drawable/ur_logo"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_above="@+id/io_host"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/io_host"
        android:orientation="vertical"
        android:layout_weight="1.65"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danforth"
                android:id="@+id/dfo_button"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="onClick"
                android:clickable="true"
                android:gravity="center"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dfo_ratting"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Douglass"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="onClick"
                android:clickable="true"
                android:id="@+id/douglass_button"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/douglass_rating"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
